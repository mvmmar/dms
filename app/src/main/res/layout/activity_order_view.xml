<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    tools:context=".orders.OrderViewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/orderViewAcceptDeny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="16dp">

            <android.support.v7.widget.CardView
                android:id="@+id/orderViewOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/orderRowMarginSmall"
                android:clipToPadding="false">

                <include layout="@layout/content_order_view_details" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/orderViewCustomerDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/orderRowMarginSmall"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@id/orderViewOrderDetails">

                <include layout="@layout/content_order_view_customer" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/orderViewTotalView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/orderRowMarginSmall"
                android:clipToPadding="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                card_view:cardCornerRadius="4dp"
                tools:layout_editor_absoluteX="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:text="@string/order_sub_total_label"

                            card_view:layout_constraintEnd_toStartOf="@+id/subTotalValue"
                            card_view:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/subTotalValue"
                            android:layout_width="128dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text=""
                            android:textAlignment="textEnd"

                            card_view:layout_constraintRight_toRightOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:text="@string/order_taxes_label"
                            card_view:layout_constraintEnd_toStartOf="@+id/orderTaxesValue"
                            card_view:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/orderTaxesValue"
                            android:layout_width="128dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text=""
                            android:textAlignment="textEnd"
                            card_view:layout_constraintRight_toRightOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:text="@string/order_total_label"
                            android:textSize="18sp"
                            card_view:layout_constraintBaseline_toBaselineOf="@+id/orderTotalValue"
                            card_view:layout_constraintEnd_toStartOf="@+id/orderTotalValue"
                            card_view:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/orderTotalValue"
                            android:layout_width="128dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="4dp"
                            android:layout_marginRight="4dp"
                            android:text=""
                            android:textAlignment="textEnd"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/orderViewAcceptDeny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <android.support.design.button.MaterialButton
            android:id="@+id/orderViewDenyButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/order_deny_button" />

        <android.support.design.button.MaterialButton
            android:id="@+id/orderViewAcceptButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="@string/order_accept_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
